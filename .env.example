# DataForSEO API Configuration
# Get your credentials from https://dataforseo.com/
DATAFORSEO_USERNAME=your_username_here
DATAFORSEO_PASSWORD=your_password_here

# MCP Server Configuration
MCP_SERVER_NAME=fastmcp-seo
MCP_SERVER_VERSION=1.0.0

# API Configuration
API_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# Default Analysis Settings
DEFAULT_LOCATION_CODE=2840  # USA
DEFAULT_LANGUAGE_CODE=en    # English
DEFAULT_DEVICE=desktop      # desktop, mobile, tablet

# OnPage Analysis Settings
ONPAGE_MAX_CRAWL_PAGES=100
ONPAGE_CRAWL_DELAY=1

# Keyword Analysis Settings
KEYWORD_LIMIT=100
COMPETITOR_LIMIT=50

# Task Management
TASK_COMPLETION_TIMEOUT=300  # 5 minutes
TASK_CHECK_INTERVAL=10       # 10 seconds

# Logging Configuration
LOG_LEVEL=INFO               # DEBUG, INFO, WARNING, ERROR
ENABLE_REQUEST_LOGGING=false # Set to true for detailed API request logging